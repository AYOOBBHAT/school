{
  "name": "school-saas",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@10.22.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "prepare": "husky install"
  },
  "devDependencies": {
    "turbo": "^2.1.1",
    "husky": "^9.1.6",
    "typescript": "^5.6.3"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "18.3.5",
      "@types/react-dom": "18.3.0"
    }
  }
}


